<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">


  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>by.sulai.intership.projects.passwordmanager.web.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/count</url-pattern>
  </filter-mapping>


  <servlet>
    <servlet-name>RequestCounterServlet</servlet-name>
    <servlet-class>by.sulai.intership.projects.passwordmanager.web.RequestCounterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RequestCounterServlet</servlet-name>
    <url-pattern>/count</url-pattern>
  </servlet-mapping>


  <context-param>
    <param-name>applicationName</param-name>
    <param-value>Password Manager</param-value>
  </context-param>



</web-app>
